<!-- Validation failure messages -->
<% if @old_interaction.errors.any? %>
  <% @old_interaction.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Old Interaction</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_old_interaction" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for connect_id -->
      <div class="form-group">
        <label for="connect_id" class="control-label">
          Connect
        </label>

        <input type="text" id="connect_id" name="connect_id" placeholder="Connect" class="form-control" value="<%= @old_interaction.connect_id %>">
      </div>

      <!-- Label and input for description -->
      <div class="form-group">
        <label for="description" class="control-label">
          Description
        </label>

        <textarea id="description" name="description" placeholder="Description" class="form-control" rows="3"><%= @old_interaction.description %></textarea>
      </div>

      <button class="btn btn-success">
        Create Old Interaction
      </button>
      or
      <a href="/old_interactions">Cancel</a>
    </form>
  </div>
</div>
