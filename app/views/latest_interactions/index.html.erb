<div class="page-header">
  <h1>
    Latest interactions
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Contact</th>
        <th>Date</th>
        <th>Interaction</th>
        <th>Actions</th>
      </tr>

      <% @latest_interactions.each do |latest_interaction| %>
      <tr>
        <% if latest_interaction.connect.user_id == current_user.id %>
        <td><a href="/connections/<%= latest_interaction.connect_id %>"><%= latest_interaction.connect.contact.first_name %> <%= latest_interaction.connect.contact.last_name %></td>
        <td><%= latest_interaction.date %></td>
        <td><%= latest_interaction.interaction %></td>
        <td>
          <a href="/latest_interactions/<%= latest_interaction.id %>" class="btn btn-primary">Show</a>
          <a href="/latest_interactions/<%= latest_interaction.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_latest_interaction/<%= latest_interaction.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
        <% end %>
      </tr>
      <% end %>
    </table>
  </div>
</div>
